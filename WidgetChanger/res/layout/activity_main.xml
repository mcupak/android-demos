<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="3dp"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imgDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:clickable="false"
        android:contentDescription="@string/dog"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dog"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnChange"
        android:layout_below="@+id/btnChange"
        android:onClick="displayPicture"
        android:padding="10dp"
        android:text="@string/picture" />

    <Button
        android:id="@+id/btnChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtCounter"
        android:layout_marginTop="14dp"
        android:onClick="changeText"
        android:padding="10dp"
        android:text="@string/change" />

    <TextView
        android:id="@+id/txtCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:padding="10dp"
        android:text="@string/initialThings"
        android:textSize="12sp" />

</RelativeLayout>